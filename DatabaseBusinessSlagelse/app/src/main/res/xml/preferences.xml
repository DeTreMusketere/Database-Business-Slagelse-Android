<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_general_title">
        <SwitchPreference
            android:title="@string/pref_refreshOnStart_title"
            android:key="@string/pref_refreshOnStart_key"
            android:summary="@string/pref_refreshOnStart_summary"
            android:defaultValue="@string/pref_refreshOnStart_defaultValue"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_development_title">
        <EditTextPreference
            android:title="@string/pref_port_title"
            android:key="@string/pref_port_key"
            android:summary="@string/pref_port_summary"
            android:inputType="number"
            android:defaultValue="@string/pref_port_defaultValue"/>
        <EditTextPreference
            android:title="@string/pref_host_title"
            android:key="@string/pref_host_key"
            android:summary="@string/pref_host_summary"
            android:defaultValue="@string/pref_host_defaultValue"/>
    </PreferenceCategory>

</PreferenceScreen>
